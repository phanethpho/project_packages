{
  "name": "@phaneth_pho/react-datatable",
  "version": "1.0.5",
  "publishConfig": {
    "access": "public"
  },
  "description": "Lightweight React DataTable component",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "prod": "vite build",
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c && npm run copy:css",
    "build:types": "tsc --emitDeclarationOnly",
    "prepare": "npm run build",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run",
    "copy:css": "copyfiles -f src/styles.css dist",
    "dev:example": "cd example && npm run dev"
  },
  "keywords": [
    "react",
    "datatable",
    "table",
    "ui"
  ],
  "author": "Phaneth Pho",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@tailwindcss/vite": "^4.1.17",
    "prop-types": "^15.8.1",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-react": "^5.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "rimraf": "^6.1.0",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  }
}
